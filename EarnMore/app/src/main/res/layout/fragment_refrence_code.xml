<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.RefrenceCode">


    <TextView
        android:id="@+id/refCodeHeadingTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Your Refrence code is "
        android:textColor="#8F0E05"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/refCodeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="gupta01"
        android:textColor="#8F0E05"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/copyRefCodeBTN"
        android:onClick="copyRefCode"
        android:text="Copy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/shareRefCodeBTN"
        android:onClick="shareRefCode"
        android:text="Share" />


</LinearLayout>